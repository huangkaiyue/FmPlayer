<!--index.wxml-->

  <view class='page_row' bindtap="suo">
    <view class="search">
      <view class="df search_arr">
        <icon class="searchcion" size='20' type='search'></icon>
        <input class="" disabled placeholder="搜索FM内容" value="{{searchValue}}"/>
      </view>
    </view>
    <view class='sousuo'>搜索</view>
  </view>

    <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">  
      <block wx:for="{{movies}}" wx:for-index="index">  
        <swiper-item>  
          <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>  
        </swiper-item>  
      </block>  
    </swiper>

<view class='container'>
  <!-- 订单列表 -->
  <block wx:for-items="{{FMlistInfoData}}">
    <view class='FMlist  b-shadow' bindtap='toggleBtn' id="{{item.id}}">
      <view class='nearFMlist-fl'>
        <image src='{{item.imgurl}}'></image>
      </view>
      <view class='nearFMlist-fr'>
        <view>
         <text class='c-green'>{{item.name}}</text>
        </view>
       <view>
         <text class='c-green'>{{item.time}}</text> 
        </view>
      </view>
    </view>
  </block>
</view>
