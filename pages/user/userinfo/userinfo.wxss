.btnbox {
  
  height: 120rpx;
  border-radius: 0rpx;
  position: relative;
  overflow: hidden;
  background: #fff;
  color: #aaa;
  font-size: 32rpx;
  display: flex;
  justify-content: left;
  align-items: center;
  
}
 
.btnbox .btn {
  position: absolute;
  width: 100%;
  height: 100%;
  margin:0;
  padding: 0;
  top: 1;
  right: 0;
  bottom: 0;
  left: 0;
  border: 0;
  opacity: 0;
  background: transparent;
  z-index: 9;
}
 
.btnbox .text {
  display: block;
  line-height: 1.5;
  text-align: center;
}
 
.btnbox_hover {
  background: #aeadaf9c
}

